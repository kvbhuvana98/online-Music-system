@model WebApplication1.Models.User

@{
    ViewBag.Title = "Login";
}

<style>
    /* Add background image */
    body {
        background-image: url('/Content/Images/musicbg2.jpg'); /* Update this to your image URL */
        background-size: cover;
        background-position: center;
        height: 100vh;
        margin: 0;
    }

    /* Ensure the login card is centered and above the background */
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-card {
        background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white for card */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Shadow effect */
        padding: 30px;
        border-radius: 10px;
        width: 100%;
        max-width: 400px; /* Maximum width for the card */
    }
</style>

<div class="login-container">
    <div class="login-card">
        @using (Html.BeginForm())
        {
            <h2 class="text-center mb-4">Login</h2>

            if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }

            <div class="mb-3">
                @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-dark w-90">Login</button>
        }
    </div>
</div>


