<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Music Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Music Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Admin")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Music Items", "Index", "MusicItems", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Admins", "Index", "Admins", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("User Orders", "ViewUserOrders", "Admins", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Chart Toppers", "Toppers", "Chart", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Create", "ViewMusic")">Add Music</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "ViewMusic")">View Musics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ViewAll", "Feedback")">View Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("SalesReport", "Admins")">Sales Report</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("UserList", "Admins")">Manage Users</a>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Admins", null, new { @class = "nav-link" })
                        </li>




                    }
                    else if (Session["UserRole"] != null && Session["UserRole"].ToString() == "User")
                    {

                        <li class="nav-item">
                            @Html.ActionLink("Home", "UserHome", "Store", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("My Cart", "Index", "Cart", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Users", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("My Orders", "MyOrders", "Users", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Vote", "Index", "Vote", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Submit", "Feedback")">Feedback</a>
                        </li>


                        @*<li class="nav-item">
                @Html.ActionLink("Vote", "Index", "Vote", null, new { @class = "nav-link" }))
            </li>*@
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("User Login", "Login", "Users", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Register", "Register", "Users", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Admin Login", "Login", "Admins", null, new { @class = "nav-link" })
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Music Store</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
</body>
</html>

