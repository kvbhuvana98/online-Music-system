@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .home-container {
        height: 90vh;
        display: flex;
        flex-direction: row;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .home-left {
        flex: 0 0 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-left: 40px;
        margin-top: -50px;
    }

        .home-left h1 {
            font-size: 3rem;
            margin-bottom: 10px;
            color: #333;
        }

        .home-left p {
            font-size: 1.25rem;
            margin-bottom: 30px;
            color: #666;
        }

/*    .home-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }*/
    .home-buttons {
        display: flex;
        flex-direction: column; /* This stacks the buttons vertically */
        gap: 4px; /* Adds space between buttons */
    }


    .home-button {
        font-size: 1rem;
        padding: 10px 20px;
        text-decoration: none;
        border: 2px solid #333;
        color: #333;
        border-radius: 5px;
        transition: all 0.3s ease;
        background-color: white;
    }

        .home-button:hover {
            background-color: #333;
            color: white;
        }

        .home-button.primary {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

            .home-button.primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

    .home-right {
        flex: 1;
        background: url('/Content/Images/musicimage3.jpg') center/contain no-repeat;
        background-color: white;
    }
</style>

<div class="home-container">
    <div class="home-left">
        <h1>Welcome to Music Store</h1>
        <p>
            Explore your favorite tunes, build your playlist,<br />
            and enjoy seamless shopping.
        </p>

        <div class="home-buttons">
            <a class="home-button " href="@Url.Action("ReadOnlyBrowse", "Store")">🎧 Browse Store</a><br />
            <a class="home-button" href="@Url.Action("Login", "Users")">🔐 Login</a><br />
            <a class="home-button" href="@Url.Action("Register", "Users")">📝 Register</a><br />
            <a class="home-button " href="@Url.Action("Index", "ViewMusic")">🎼 View Music</a><br />
        </div>
    </div>

    <div class="home-right"></div>
</div>






