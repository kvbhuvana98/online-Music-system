@model WebApplication1.Models.Feedback

@{
    ViewBag.Title = "Submit Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Add background image */
    body {
        background-image: url('/Content/Images/musicbg2.jpg'); /* Replace with your image path */
        background-size: cover;
        background-position: center;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Center the feedback form */
    .feedback-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        /*backdrop-filter: blur(8px);*/ /* Optional: adds a blur effect to background */
    }

    /* Style the feedback card */
    .feedback-card {
        background-color: rgba(255, 255, 255, 0.5); /* Transparent white background */
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        padding: 30px;
        width: 100%;
        max-width: 600px;
        margin: 20px;
    }

    /* Style the title */
    h2 {
        text-align: center;
        color: black;
        margin-bottom: 30px;
    }

    /* Style the input fields */
    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        border: 1px solid #ced4da;
        font-size: 16px;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    /* Style the submit button */
    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        font-size: 16px;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            cursor: pointer;
        }

    /* Alert success message */
    .alert-success {
        background-color: #d4edda;
        color: #155724;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
        font-size: 16px;
    }
</style>

<div class="feedback-container">
    <div class="feedback-card">
        <h2>Submit Feedback</h2>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter your username" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Message, new { @class = "form-label" })
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", rows = 5, placeholder = "Enter your feedback here..." })
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
        }
    </div>
</div>


